<%= content_for :title, 'Lyriks' %>

<h1>All lyriks</h1>

<table>


<% @songs.each do |song| %>
  <tr>
    <td><%= image_tag song.user.image.thumb %></td>
    <td><%= song.user.username %></td>
    <td><%= song.name %></td>
    <td><%= audio_tag song.lyrik, controls: true %></td>
    <td><%= song.created_at %></td>
    <td><%= song.rating %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', dashboard_index_path %>

