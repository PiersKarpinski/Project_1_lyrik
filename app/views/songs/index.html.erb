<h1>Listing songs</h1>

<%= search_form_for @q do |f| %>
  <p>
    <%= f.label :name_cont %>
    <%= f.text_field :name_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Play</th>
    <th>Date uploaded</th>
    <th>Rating</th>

  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.user.username %></td>
    <td><%= song.name %></td>
    <td><%= audio_tag song.lyrik, controls: true %></td>
    <td><%= song.created_at %></td>
    <td><%= song.rating %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

