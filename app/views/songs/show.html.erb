<%= content_for :title, 'Lyrik' %>

<p id="notice"><%= notice %></p>

<div class="box">
<h2>Author:</h2>
<p><%= @song.user.username %></p>
<p><%= image_tag @song.user.image, class: 'user_image' %></p>

<h2>Title:</h2>
<p><%= @song.name %></p>
<p><%= audio_tag @song.lyrik, controls: true, class: 'song_lyrik' %></p>

<h2>Genre(s):</h2>
<p><% @song.genres.each do |genre| %>
    <%= genre.name %>
  <% end %></p>

<p><%= link_to 'Edit', edit_song_path(@song) %> | 
  <%= link_to 'All songs in genre', genre_path %> | 
  <%= link_to "Leave a comment", new_comment_path %></p>
</div>

<div class="box">
<h2>Comments:</h2>    
  <% @song.comments.each do |comment| %>
    <%= comment.content %>
    <% if current_user.id == comment.song.user_id || comment.user_id %>
    <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  <% end %>
</p>
</div>






