<%= content_for :title, 'Discover' %>


<h2>Discover</h2>




<table>
  <% Genre.all.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, genre %></td>
    </tr>
  <% end %>
  </table>

<h2>All lyriks</h2>

<table>
  <% @songs.each do |song| %>
    <tr>
      <td><%= image_tag song.user.image.thumb %></td>
      <td><%= song.user.username %></td>
      <td><%= song.name %></td>
      <td><%= audio_tag song.lyrik, controls: true %></td>
      <td><%= song.created_at %></td>
      <td><%= song.rating %></td>
      <td><%= link_to 'Show', song %></td>
    </tr>
    <%= paginate @songs %>
  <% end %>
</table>
