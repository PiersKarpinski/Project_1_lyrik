<%= content_for :title, 'Dashboard' %>

<h2>Dashboard</h2>

<p>
  <b>My lyriks:</b>
  <table>
  <% @songs.each do |song| %>
    <tr>
      <td><%= song.user.username %></td>
      <td><%= song.name %></td>
      <td><%= audio_tag song.lyrik, controls: true %></td>
      <td><%= song.created_at %></td>
      <td><%= song.rating %></td>
      <td><%= link_to 'Show', song %></td>
      <td><%= link_to 'Edit', edit_song_path(song) %></td>
      <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     
    </tr>
  <% end %>
  </table>

  <br />
<p>
  <b>My comments:</b>
  <table>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.song.name %></td>
      <td><%= link_to 'Show', comment %></td>
      <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  
</p>

<table>
  <tr>
    <li><%= link_to 'users', users_path %></li>
    <li><%= link_to 'genres', genres_path %></li>
    <li><%= link_to 'songs', songs_path %></li>
    <li><%= link_to 'comments', comments_path %></li>
  </tr>
</table>









