<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>  
  <div class="wrapper">
    <header>
      <h1>Lyrik</h1>

      <nav>
        <ul>
          <li class "header"><%= link_to "home", root_path %></li>
          <li><%= search_form_for @q do |f| %>
              <%= f.text_field :name_or_user_name_or_user_username_cont %>
              <%= f.submit %>
              <% end %></li>
          <li><%= link_to "discover", discover_index_path %></li>
          <li><%= link_to "dashboard", dashboard_index_path %></li>
          <li><%= link_to "profile", current_user %></li>
          <li><%= link_to "upload", new_song_path %></li>
          <li><% if current_user %>
                <%= current_user.email %>
                <%= link_to "logout", destroy_sessions_path, method: :delete %>
              <% else %>
                <%= link_to "login", new_session_path %>
                <%= link_to "sign up", new_user_path %>
              <% end %></li>
        </ul>
      </nav>
    </header>
  </div>
  <div id="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

<%= yield %>




</body>
</html>
